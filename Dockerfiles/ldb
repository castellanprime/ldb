FROM ubuntu:xenial

MAINTAINER Vitor Enes Duarte <vitorenesduarte@gmail.com>

RUN cd /tmp && \
    apt-get update && \
    apt-get -y install wget build-essential make gcc ruby-dev git expect gnuplot && \
    wget http://packages.erlang-solutions.com/erlang-solutions_1.0_all.deb && \
    dpkg -i erlang-solutions_1.0_all.deb && \
    apt-get update && \
    apt-get -y install erlang erlang-base-hipe

CMD cd /opt && \
    git clone https://github.com/vitorenesduarte/ldb.git -b $BRANCH && \
    cd ldb && \
    make stage && \
    /opt/ldb/_build/default/rel/ldb/bin/env
